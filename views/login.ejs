<% include header.ejs %>

<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
	    <% if (message != '') { %>
				<p class="alert alert-danger" role="alert"><%= message %></p>
			<% } %>
      <h2 class="text-center">
        <img src="img/photo.png" class="img-circle"><br>Please log in!
      </h2>
    </div>
    <div class="modal-body">
      <form class="form col-md-12 center-block" action="/login" method="post">
        <div class="form-group">
          <input name="username" type="text" class="form-control input-lg" placeholder="User" autofocus required>
        </div>
        <div class="form-group">
          <input name="password" type="password" class="form-control input-lg" placeholder="Password" required>
        </div>
        <div class="form-group">
          <button class="btn btn-success btn-lg btn-block signIn">登 入</button>
          <span class="pull-right"><a href="/register">註冊帳號</a></span>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <div class="col-md-12">
      <a href="/" class="btn btn-default cancel" role="button">取消</a>
		  </div>	
    </div>
  </div>
</div>

<% include footer.ejs %>
